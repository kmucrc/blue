<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        tools:context=".main.MainActivity">
    <ImageView
            android:layout_width="0dp"
            android:layout_height="100dp" app:srcCompat="@drawable/img_main_title_banner"
            android:id="@+id/iv_main_title_banner" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="36dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="19dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="19dp"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:id="@+id/bt_main_connection"
            android:background="@drawable/bt_main_connection" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_main_title_banner" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="19dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="19dp"/>
    <Button
            android:layout_width="155dp"
            android:layout_height="150dp"
            android:id="@+id/bt_main_notification"
            android:background="@drawable/bt_main_notification" android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@+id/bt_main_connection" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="19dp"/>
    <Button
            android:layout_width="155dp"
            android:layout_height="150dp"
            android:id="@+id/bt_main_click" android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@+id/bt_main_connection"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="19dp" android:background="@drawable/bt_main_click"/>
    <Button
            android:layout_width="155dp"
            android:layout_height="150dp"
            android:id="@+id/bt_main_preferences" android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@+id/bt_main_notification" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="19dp" android:background="@drawable/bt_main_preferences"/>
    <Button
            android:layout_width="155dp"
            android:layout_height="150dp"
            android:id="@+id/bt_main_help_review"
            android:background="@drawable/bt_main_help_review" android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@+id/bt_main_click" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="19dp"/>
    <ImageView
            android:layout_width="70dp"
            android:layout_height="18dp" app:srcCompat="@drawable/img_common_copyright"
            android:id="@+id/iv_common_copyright"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="13dp"
            tools:layout_editor_absoluteX="141dp"/>
</android.support.constraint.ConstraintLayout>