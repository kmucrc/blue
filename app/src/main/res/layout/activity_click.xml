<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@color/colorWhite">
    <ImageView
            android:layout_width="322dp"
            android:layout_height="100dp" app:srcCompat="@drawable/img_click_title_banner"
            android:id="@+id/iv_click_title_banner" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="13dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="19dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="19dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="43dp" android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_click_title_banner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/linearLayout">
        <TextView
                android:text="@string/str_click_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/tv_click_title" android:layout_weight="1"
                android:gravity="center" android:background="@color/colorFCEE21" android:textColor="@color/colorWhite"
                android:textSize="18sp" android:fontFamily="@font/tcceb"/>
    </LinearLayout>
    <Button
            android:layout_width="180dp"
            android:layout_height="102dp"
            android:id="@+id/bt_click_camera" android:layout_marginTop="3dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/bt_click_camera"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="102dp"
            android:id="@+id/bt_click_record_voice" android:layout_marginTop="3dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/bt_click_camera"
            android:background="@drawable/bt_click_record_voice"/>
    <Button
            android:layout_width="180dp"
            android:layout_height="102dp"
            android:id="@+id/bt_click_shortcut_call"
            android:background="@drawable/bt_click_shortcut_call"
            app:layout_constraintTop_toBottomOf="@+id/bt_click_camera" app:layout_constraintStart_toStartOf="parent"
    />
    <Button
            android:layout_width="0dp"
            android:layout_height="102dp"
            android:id="@+id/bt_click_emergency"
            app:layout_constraintTop_toBottomOf="@+id/bt_click_record_voice"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/bt_click_shortcut_call"
            android:background="@drawable/bt_click_emergency"/>
    <Button
            android:layout_width="180dp"
            android:layout_height="102dp"
            android:id="@+id/bt_click_light_control"
            app:layout_constraintTop_toBottomOf="@+id/bt_click_shortcut_call"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/bt_click_light_control"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="102dp"
            android:id="@+id/bt_click_music_play"
            app:layout_constraintTop_toBottomOf="@+id/bt_click_emergency"
            app:layout_constraintStart_toEndOf="@+id/bt_click_light_control"
            app:layout_constraintEnd_toEndOf="parent" android:background="@drawable/bt_click_music_play"/>
    <Button
            android:layout_width="180dp"
            android:layout_height="102dp"
            android:id="@+id/bt_click_manner_mode"
            app:layout_constraintTop_toBottomOf="@+id/bt_click_light_control"
            app:layout_constraintStart_toStartOf="parent" android:background="@drawable/bt_click_manner_mode"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="102dp"
            android:id="@+id/bt_click_find_phone"
            app:layout_constraintTop_toBottomOf="@+id/bt_click_music_play"
            app:layout_constraintStart_toEndOf="@+id/bt_click_manner_mode" app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/bt_click_find_phone"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/bt_click_customize"
            android:background="@drawable/bt_click_customize" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bt_click_manner_mode" app:layout_constraintEnd_toEndOf="parent"
    />
</android.support.constraint.ConstraintLayout>